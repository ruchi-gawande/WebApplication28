@model WebApplication28.Models.Admin
@{
    ViewBag.Title = "Login As Admin";
}
<html>
<head>
    <title></title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <style>
        .jumbotron {
            position: absolute;
            left: 300px;
            width: 500px;
            height: 500px;
            border: solid;
            border-color: greenyellow;
            /*left:60px;*/
        }

        .tab {
            width: 1000px;
        }

        h1 {
            text-align: center;
        }

        .but {
            position: absolute;
            left: 200px;
        }

        img {
            border-radius: 50%;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .photo {
            position: absolute;
            top: 0px;
            left: 190px;
        }

        .form-control {
            border: solid;
            border-color: greenyellow;
        }
    </style>
</head>
<body style="background-image: url('../../Content/gympic3.jpeg')">
    <br />
    <br />


    <div class="d-flex justify-content-center form_container">

        <br />
        <br />
        <div class="jumbotron">
            @using (Html.BeginForm("LoginAdmin", "Account", FormMethod.Post))
            {@*<div class="photo">
                        <img src="~/Content/gymlogo2.png" height="100" width="100" />
                    </div>*@
            <br /><br />
            <h1>Login</h1>
            <div class="photo">
                <img src="~/Content/gymlogo2.png" width="100" height="100" />
            </div>

            <div style="max-width: 400px;">




             @Html.LabelFor(model=>model.admin_id)



                @Html.TextBoxFor(model => model.admin_id, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.admin_id, null, new { @class = "text text-danger" })<br />




                @Html.LabelFor(model => model.username)


                @Html.TextBoxFor(model => model.username, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.username, null, new { @class = "text text-danger" })


                <br />
                <br />
                <div class="but">
                    <input type="submit" value="Login" class="btn btn-success" />

                    <input type="reset" value="Reset" class="btn btn-success" />
                </div>
                @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })

            </div><br /><br /><br />


           


            



        }
        </div>
    </div>
</body>
</html>

